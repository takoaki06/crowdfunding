  <h3>気になるカテゴリー</h3>
<table>
  <thead>
    <tr>
      <th>プロダクト名</th>
      <th>プロダクトの説明</th>
      <th>目標金額</th>
      <th>達成状況</th>
      <th>企画者</th>
      <th>いいね</th>
      <th>カテゴリー</th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.title %></td>
        <td><%= product.desc %></td>
        <td><%= product.price %></td>
        <td><%= product.investments.sum(:price) %></td>
        <td><%= link_to product.user.name, user_path(product.user.id) %>さん</td>
        <td><strong>いいね数: <%= product.likes.count %></strong></td>
        <% product.categories.each do |pc| %>
          <td><%= pc.name %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
