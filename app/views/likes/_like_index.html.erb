<% if product.already_liked?(current_user) %>
  <%= button_to 'いいねを取り消す', product_like_path(product, likes), method: :delete %> 
<% else %>
  <%= form_with model: like, url: product_likes_path(product.id) do |form| %>
    <%= form.hidden_field :product_id, value: product.id %>
    <%= form.submit 'いいね！' %>
  <% end %>
<% end %>
