<% if current_user.already_liked?(product) %>
  <%= button_to 'いいねを取り消す', product_like_path(product.id, @likes), method: :delete %>
<% else %>
  <%= form_with model: @like, url: product_likes_path(product.id) do |form| %>
    <%= form.hidden_field :user_id, value: current_user.id %>
    <%= form.hidden_field :post_id, value: product.id %>
    <%= form.submit 'いいね！' %>
  <% end %>
<% end %>
