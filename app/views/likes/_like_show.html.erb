<% if @product.already_liked?(current_user) %>
  <%= button_to 'いいねを取り消す', product_like_path(@product), method: :delete %>
<% else %>
  <%= form_with model: [@product, @like] do |form| %>
    <%= form.hidden_field :product_id, value: @product.id %>
    <%= form.submit 'いいね！' %>
  <% end %>
<% end %>