<% if current_user.already_liked?(@product) %>
  <%= button_to 'いいねを取り消す', product_like_path(@product), method: :delete %>
<% else %>
  <%= form_for [@product, @like] do |f| %>
    <%= f.hidden_field :user_id, :value => current_user.id %>
    <%= f.hidden_field :post_id, :value => @product.id %>
    <%= f.submit 'いいね！' %>
  <% end %>
<% end %>