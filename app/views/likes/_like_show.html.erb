<% if current_user.already_liked?(@product) %>
  <%= button_to 'いいねを取り消す', product_like_path(@product), method: :delete %>
<% else %>
  <%= form_with model: [@product, @like] do |form| %>
    <%= form.hidden_field :user_id, value: current_user.id %>
    <%= form.hidden_field :post_id, value: @product.id %>
    <%= form.submit 'いいね！' %>
  <% end %>
<% end %>