<h1>出資金額を入力する</h1>


<p>
  <strong>Title:</strong>
  <%= @product.title %>
</p>

<p>
  <strong>Desc:</strong>
  <%= @product.desc %>
</p>

<p>
  <strong>price:</strong>
  <%= @product.price %>
</p>


<%= form_with(model: @investment, url: product_investments_path ) do |form| %>

  <div class="field">
    <%= form.label :price %>
    <%= form.text_field :price %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
