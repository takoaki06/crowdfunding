<h1>出資金額を入力する</h1>


<p>
  <strong>Title:</strong>
  <%= @product.title %>
</p>

<p>
  <strong>Desc:</strong>
  <%= @product.desc %>
</p>

<p>
  <strong>price:</strong>
  <%= @product.price %>
</p>


<%= form_with(model: @investment, url: product_investments_path ) do |form| %>
  <div class="field">
    <%= form.label :金額を選択してください %>
    <%= form.select :price, Product.all.map{|p| [p.price]} %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
